name: Terraform Deployment

on:
  push:
    branches:
      - main  # âœ… Runs on push to main branch
  pull_request:
    branches:
      - main  # âœ… Runs on pull requests

permissions:
  id-token: write
  contents: read

jobs:
  terraform:
    name: "Terraform Deploy"
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v3

      - name: ğŸ”§ Setup Terraform
        uses: hashicorp/setup-terraform@v2
        with:
          terraform_version: 1.5.7  # âœ… Use latest Terraform version

      - name: ğŸ” Verify Terraform Formatting
        run: terraform fmt -check

      - name: ğŸ”‘ Configure AWS Credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}

      - name: ğŸš€ Initialize Terraform
        run: terraform init

      - name: ğŸ“ Terraform Plan
        run: terraform plan -out=tfplan

      - name: âœ… Require Approval Before Apply
        uses: hmarr/auto-approve-action@v3
        if: github.ref == 'refs/heads/main'
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}

      - name: ğŸš€ Terraform Apply
        run: terraform apply -auto-approve tfplan
        if: github.ref == 'refs/heads/main'


